#include <iostream>
#include <clocale>

using namespace std;

void Unit_1() {
	int a, b;
	cout << "Написать программу, проверяющую что сумма двух (введенных с клавиатуры) чисел лежит в пределах от 10 до 20" << endl << "(включительно), если да – вывести строку \"truе\", в противном случае – \"fаlse\"" << endl << endl;
	cin >> a;
	cin >> b;
	if ((a + b) > 10 && (a + b) < 20) {
		cout << "True";
	}
	else {
		cout << "False";
	}
}

void Unit_2(int a, int b) {
	cout << "Написать программу, выводящую на экран строку “true”, если две целочисленные константы, объявленные в её начале" << endl << "либо обе равны десяти сами по себе, либо их сумма равна десяти.Иначе \"false\"" << endl << endl;
	if (a == 10 || b == 10 || (a + b) == 10) {
		cout << "True";
	}
	else cout << "False";
}

void Unit_3() {
	cout << "Написать программу которая выводит на экран список всех нечетных чисел он 1 до 50. " << endl << "Например: \"Your numbers : 1 3 5 7 9 11 13 …\". Для решения используйте любой С++ цикл" << endl << endl;
	for (int i = 0; i <= 50; i++) {
		if ((i % 2) != 0) {
			cout << i << "\t";
			if ((i % 5) == 0) cout << endl;
		}
	}
}

void Unit_4() {
	cout << "Написать программу, проверяющую, является ли некоторое число - простым. Простое число — это целое положительное число, " << endl << "которое делится без остатка только на единицу и себя само." << endl << endl;
	int a;
	cin >> a;
	if (a < 0) cout << "Это отрицательное число";
	if (a == 0) cout << "Ноль не входит в ряд простых чисел";
	if (a == 1 || a == 2) cout << "Введенное число является простым";
	for (int i = 2; i <= (a / 2); i++) {
		if ((a % i) == 0) {
			cout << "Введенное число является составным";
			break;
		}
		if (i == (a/2)) {cout << "Введенное число является простым";
		}
	}
}


void Unit_5() {
	cout << "Пользователь вводит с клавиатуры число (год): от 1 до 3000. Написать программу, которая определяет является ли этот год високосным. " << endl << "Каждый 4-й год является високосным, кроме каждого 100-го, при этом каждый 400-й – високосный. Вывести результаты работы программы в консоль" << endl << endl;
	int a;
	cin >> a;
	if ((a % 4 == 0 && a % 100 != 0) || (a % 400 == 0)) cout << "Год высокосный";
	else cout << "Год не высокосный";
}



int main(int n, char** params) 
{
	setlocale(LC_ALL, "ru");
	const int a = 5;
	int const b = 8;
	int c;
	c = -1;
	while (c != 0) {
		cout << "Введите номер задания из списка домашнего задания или введите 0 для выхода из программы: ";
		cin >> c;
		switch (c) {
		case(0): cout << "До свидания!" << endl; break;
		case(1): cout << endl; Unit_1(); c = -1; cout << endl; break;
		case(2): cout << endl; Unit_2(a, b); c = -1; cout << endl; break;
		case(3): cout << endl; Unit_3(); c = -1; cout << endl; break;
		case(4): cout << endl; Unit_4(); c = -1; cout << endl; break;
		case(5): cout << endl; Unit_5(); c = -1; cout << endl; break;
		default: cout << "А нам такого не задавали =( " << endl;
		} 
		

	}

	return 0;
}

